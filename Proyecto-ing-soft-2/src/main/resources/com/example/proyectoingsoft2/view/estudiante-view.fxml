<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.proyectoingsoft2.controller.EstudianteController"
            style="-fx-background-color: #f0f0f0;">

    <top>
        <VBox spacing="10" style="-fx-background-color: #3498db; -fx-padding: 20;" alignment="CENTER">
            <Label text="GESTIÓN DE ESTUDIANTES" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Colegio Montessori Quimbaya" style="-fx-font-size: 14; -fx-text-fill: white;"/>
        </VBox>
    </top>

    <center>
        <HBox spacing="15" style="-fx-padding: 15;">

            <VBox spacing="10" style="-fx-border-color: #3498db; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: white; -fx-border-width: 2;" minWidth="320" maxWidth="320">
                <Label text="Nuevo Estudiante" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Separator/>

                <Label text="Nombre Completo:" style="-fx-font-weight: bold;"/>
                <TextField fx:id="txtNombre" promptText="Ej: Juan García López" style="-fx-padding: 8; -fx-border-color: #3498db; -fx-border-radius: 3; -fx-font-size: 11;"/>

                <Label text="Documento de Identidad:" style="-fx-font-weight: bold;"/>
                <TextField fx:id="txtDocumento" promptText="Número de cédula o registro civil" style="-fx-padding: 8; -fx-border-color: #3498db; -fx-border-radius: 3; -fx-font-size: 11;"/>

                <Label text="Grado:" style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="cbGrado" prefWidth="200" style="-fx-padding: 8; -fx-border-color: #3498db; -fx-border-radius: 3;"/>

                <Label text="Acudiente:" style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="cbAcudiente" prefWidth="200" style="-fx-padding: 8; -fx-border-color: #3498db; -fx-border-radius: 3;"/>

                <Separator/>

                <HBox spacing="8" alignment="CENTER">
                    <Button fx:id="btnAgregar" text="+ AGREGAR" style="-fx-font-weight: bold; -fx-padding: 10 20; -fx-font-size: 11; -fx-background-color: #3498db; -fx-text-fill: white; -fx-border-radius: 3;"/>
                    <Button fx:id="btnLimpiar" text="LIMPIAR" style="-fx-font-weight: bold; -fx-padding: 10 20; -fx-font-size: 11; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-border-radius: 3;"/>
                </HBox>
            </VBox>

            <VBox spacing="10" style="-fx-border-color: #3498db; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: white; -fx-border-width: 2;" HBox.hgrow="ALWAYS">

                <Label text="Listado de Estudiantes" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <TableView fx:id="tablaEstudiantes" style="-fx-font-size: 11;" VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <columns>
                        <TableColumn text="ID" prefWidth="50" fx:id="colId"/>
                        <TableColumn text="Nombre" prefWidth="150" fx:id="colNombre"/>
                        <TableColumn text="Documento" prefWidth="120" fx:id="colDocumento"/>
                        <TableColumn text="Grado" prefWidth="100" fx:id="colGrado"/>
                        <TableColumn text="Acudiente" prefWidth="130" fx:id="colAcudiente"/>
                        <TableColumn text="Estado" prefWidth="100" fx:id="colEstado"/>
                    </columns>
                </TableView>

                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="btnEditar" text="✏️ EDITAR" style="-fx-font-weight: bold; -fx-padding: 8 15; -fx-font-size: 10; -fx-background-color: #f39c12; -fx-text-fill: white;"/>
                    <Button fx:id="btnEliminar" text="🗑️ ELIMINAR" style="-fx-font-weight: bold; -fx-padding: 8 15; -fx-font-size: 10; -fx-background-color: #e74c3c; -fx-text-fill: white;"/>
                </HBox>

                <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-border-radius: 3;">
                    <Label fx:id="lblTotal" text="Total Estudiantes: 0" style="-fx-font-weight: bold; -fx-font-size: 12;"/>
                </HBox>

            </VBox>

        </HBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Button fx:id="btnVolver" text="← VOLVER AL MENÚ" style="-fx-font-weight: bold; -fx-padding: 10 20; -fx-font-size: 12; -fx-background-color: #34495e; -fx-text-fill: white;"/>
        </HBox>
    </bottom>

</BorderPane>