<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.proyectoingsoft2.controller.MainController"
            style="-fx-background-color: #f0f0f0;"
            minWidth="1200" minHeight="800">

    <top>
        <VBox spacing="15" style="-fx-background-color: #2c3e50; -fx-padding: 25;" alignment="CENTER">
            <Label text="SISTEMA DE GESTIÓN DE MATRÍCULAS" style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Colegio Montessori Quimbaya" style="-fx-font-size: 16; -fx-text-fill: #ecf0f1;"/>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true"
                    style="-fx-background-color: transparent; -fx-background: transparent; -fx-padding: 0;">
            <VBox spacing="25" style="-fx-padding: 30;" alignment="TOP_CENTER">

                <Label text="Seleccione un módulo:" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <!-- FILA 1: Estudiantes, Acudientes y Cupos -->
                <HBox spacing="20" alignment="CENTER" style="-fx-padding: 0;">
                    <VBox spacing="12" style="-fx-border-color: #3498db; -fx-border-radius: 8; -fx-background-color: white; -fx-padding: 20; -fx-border-width: 2; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);" alignment="CENTER" minWidth="260" prefWidth="280" maxWidth="300">
                        <Label text="👨‍🎓 ESTUDIANTES" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #3498db;"/>
                        <Label text="Registra y administra estudiantes" style="-fx-font-size: 10; -fx-text-fill: #7f8c8d; -fx-wrap-text: true; -fx-text-alignment: center;"/>
                        <Region VBox.vgrow="ALWAYS" minHeight="5"/>
                        <Button text="Acceder" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10 30; -fx-font-weight: bold; -fx-font-size: 11; -fx-cursor: hand;" onAction="#irAEstudiantes" maxWidth="Infinity"/>
                    </VBox>

                    <VBox spacing="12" style="-fx-border-color: #9b59b6; -fx-border-radius: 8; -fx-background-color: white; -fx-padding: 20; -fx-border-width: 2; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);" alignment="CENTER" minWidth="260" prefWidth="280" maxWidth="300">
                        <Label text="👥 ACUDIENTES" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #9b59b6;"/>
                        <Label text="Administra responsables legales" style="-fx-font-size: 10; -fx-text-fill: #7f8c8d; -fx-wrap-text: true; -fx-text-alignment: center;"/>
                        <Region VBox.vgrow="ALWAYS" minHeight="5"/>
                        <Button text="Acceder" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-padding: 10 30; -fx-font-weight: bold; -fx-font-size: 11; -fx-cursor: hand;" onAction="#irAAcudientes" maxWidth="Infinity"/>
                    </VBox>

                    <VBox spacing="12" style="-fx-border-color: #1abc9c; -fx-border-radius: 8; -fx-background-color: white; -fx-padding: 20; -fx-border-width: 2; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);" alignment="CENTER" minWidth="260" prefWidth="280" maxWidth="300">
                        <Label text="📚 CUPOS" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #1abc9c;"/>
                        <Label text="Administra cupos por grado" style="-fx-font-size: 10; -fx-text-fill: #7f8c8d; -fx-wrap-text: true; -fx-text-alignment: center;"/>
                        <Region VBox.vgrow="ALWAYS" minHeight="5"/>
                        <Button text="Acceder" style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-padding: 10 30; -fx-font-weight: bold; -fx-font-size: 11; -fx-cursor: hand;" onAction="#irACupos" maxWidth="Infinity"/>
                    </VBox>
                </HBox>

                <!-- FILA 2: Reservas, Matrículas y Pagos -->
                <HBox spacing="20" alignment="CENTER" style="-fx-padding: 0;">
                    <VBox spacing="12" style="-fx-border-color: #8e44ad; -fx-border-radius: 8; -fx-background-color: white; -fx-padding: 20; -fx-border-width: 2; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);" alignment="CENTER" minWidth="260" prefWidth="280" maxWidth="300">
                        <Label text="🎫 RESERVAS" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #8e44ad;"/>
                        <Label text="Gestiona reservas de cupos" style="-fx-font-size: 10; -fx-text-fill: #7f8c8d; -fx-wrap-text: true; -fx-text-alignment: center;"/>
                        <Region VBox.vgrow="ALWAYS" minHeight="5"/>
                        <Button text="Acceder" style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-padding: 10 30; -fx-font-weight: bold; -fx-font-size: 11; -fx-cursor: hand;" onAction="#irAReservas" maxWidth="Infinity"/>
                    </VBox>

                    <VBox spacing="12" style="-fx-border-color: #27ae60; -fx-border-radius: 8; -fx-background-color: white; -fx-padding: 20; -fx-border-width: 2; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);" alignment="CENTER" minWidth="260" prefWidth="280" maxWidth="300">
                        <Label text="📋 MATRÍCULAS" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
                        <Label text="Registra y aprueba matrículas" style="-fx-font-size: 10; -fx-text-fill: #7f8c8d; -fx-wrap-text: true; -fx-text-alignment: center;"/>
                        <Region VBox.vgrow="ALWAYS" minHeight="5"/>
                        <Button text="Acceder" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 10 30; -fx-font-weight: bold; -fx-font-size: 11; -fx-cursor: hand;" onAction="#irAMatriculas" maxWidth="Infinity"/>
                    </VBox>

                    <VBox spacing="12" style="-fx-border-color: #f39c12; -fx-border-radius: 8; -fx-background-color: white; -fx-padding: 20; -fx-border-width: 2; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);" alignment="CENTER" minWidth="260" prefWidth="280" maxWidth="300">
                        <Label text="💳 PAGOS" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #f39c12;"/>
                        <Label text="Procesa y valida pagos" style="-fx-font-size: 10; -fx-text-fill: #7f8c8d; -fx-wrap-text: true; -fx-text-alignment: center;"/>
                        <Region VBox.vgrow="ALWAYS" minHeight="5"/>
                        <Button text="Acceder" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-padding: 10 30; -fx-font-weight: bold; -fx-font-size: 11; -fx-cursor: hand;" onAction="#irAPagos" maxWidth="Infinity"/>
                    </VBox>
                </HBox>

                <!-- FILA 3: Salir -->
                <HBox alignment="CENTER" style="-fx-padding: 10 0 0 0;">
                    <VBox spacing="12" style="-fx-border-color: #e74c3c; -fx-border-radius: 8; -fx-background-color: white; -fx-padding: 20; -fx-border-width: 2; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);" alignment="CENTER" minWidth="260" prefWidth="280" maxWidth="300">
                        <Label text="🚪 SALIR" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
                        <Label text="Cierra la aplicación" style="-fx-font-size: 10; -fx-text-fill: #7f8c8d; -fx-wrap-text: true; -fx-text-alignment: center;"/>
                        <Region VBox.vgrow="ALWAYS" minHeight="5"/>
                        <Button text="Salir" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 10 30; -fx-font-weight: bold; -fx-font-size: 11; -fx-cursor: hand;" onAction="#salir" maxWidth="Infinity"/>
                    </VBox>
                </HBox>

                <Region VBox.vgrow="ALWAYS"/>

            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <HBox style="-fx-background-color: #34495e; -fx-padding: 15;" alignment="CENTER">
            <Label text="© 2024 Montessori Quimbaya - Sistema de Gestión de Matrículas" style="-fx-text-fill: white; -fx-font-size: 11;"/>
        </HBox>
    </bottom>

</BorderPane>