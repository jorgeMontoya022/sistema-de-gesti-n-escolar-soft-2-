<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.proyectoingsoft2.controller.MainController"
            style="-fx-background-color: #f0f0f0;">

    <!-- HEADER -->
    <top>
        <VBox spacing="15" style="-fx-background-color: #2c3e50; -fx-padding: 25;" alignment="CENTER">
            <Label text="SISTEMA DE GESTIÓN" style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Colegio Montessori Quimbaya" style="-fx-font-size: 16; -fx-text-fill: #ecf0f1;"/>
        </VBox>
    </top>

    <!-- CONTENIDO PRINCIPAL -->
    <center>
        <StackPane>
            <VBox spacing="30" style="-fx-padding: 40;" alignment="CENTER" maxWidth="600">

                <Label text="Seleccione un módulo:" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <!-- Grid de botones -->
                <GridPane hgap="25" vgap="25" alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints minWidth="250" prefWidth="250" maxWidth="300"/>
                        <ColumnConstraints minWidth="250" prefWidth="250" maxWidth="300"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="140" prefHeight="140"/>
                        <RowConstraints minHeight="140" prefHeight="140"/>
                    </rowConstraints>

                    <!-- Botón Cupos -->
                    <VBox spacing="12" style="-fx-border-color: #3498db; -fx-border-radius: 8; -fx-background-color: white; -fx-padding: 20; -fx-border-width: 2; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="📚 GESTIÓN DE CUPOS" style="-fx-font-size: 15; -fx-font-weight: bold; -fx-text-fill: #3498db;"/>
                        <Label text="Administra los cupos disponibles para cada grado" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d; -fx-wrap-text: true; -fx-text-alignment: center;"/>
                        <Region VBox.vgrow="ALWAYS" minHeight="5"/>
                        <Button text="Acceder" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10 30; -fx-font-weight: bold; -fx-font-size: 12; -fx-cursor: hand;" onAction="#irACupos"/>
                    </VBox>

                    <!-- Botón Matrículas -->
                    <VBox spacing="12" style="-fx-border-color: #27ae60; -fx-border-radius: 8; -fx-background-color: white; -fx-padding: 20; -fx-border-width: 2; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="📋 GESTIÓN DE MATRÍCULAS" style="-fx-font-size: 15; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
                        <Label text="Registra y administra las matrículas de estudiantes" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d; -fx-wrap-text: true; -fx-text-alignment: center;"/>
                        <Region VBox.vgrow="ALWAYS" minHeight="5"/>
                        <Button text="Acceder" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 10 30; -fx-font-weight: bold; -fx-font-size: 12; -fx-cursor: hand;" onAction="#irAMatriculas"/>
                    </VBox>

                    <!-- Botón Contratos -->
                    <VBox spacing="12" style="-fx-border-color: #9b59b6; -fx-border-radius: 8; -fx-background-color: white; -fx-padding: 20; -fx-border-width: 2; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <Label text="📄 GESTIÓN DE CONTRATOS" style="-fx-font-size: 15; -fx-font-weight: bold; -fx-text-fill: #9b59b6;"/>
                        <Label text="Crea y administra los contratos con acudientes" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d; -fx-wrap-text: true; -fx-text-alignment: center;"/>
                        <Region VBox.vgrow="ALWAYS" minHeight="5"/>
                        <Button text="Acceder" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-padding: 10 30; -fx-font-weight: bold; -fx-font-size: 12; -fx-cursor: hand;" onAction="#irAContratos"/>
                    </VBox>

                    <!-- Botón Salir -->
                    <VBox spacing="12" style="-fx-border-color: #e74c3c; -fx-border-radius: 8; -fx-background-color: white; -fx-padding: 20; -fx-border-width: 2; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <Label text="🚪 SALIR" style="-fx-font-size: 15; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
                        <Label text="Cierra la aplicación" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d; -fx-wrap-text: true; -fx-text-alignment: center;"/>
                        <Region VBox.vgrow="ALWAYS" minHeight="5"/>
                        <Button text="Salir" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 10 30; -fx-font-weight: bold; -fx-font-size: 12; -fx-cursor: hand;" onAction="#salir"/>
                    </VBox>

                </GridPane>

            </VBox>
        </StackPane>
    </center>

    <!-- FOOTER -->
    <bottom>
        <HBox style="-fx-background-color: #34495e; -fx-padding: 15;" alignment="CENTER">
            <Label text="© 2024 Montessori Quimbaya - Sistema de Gestión" style="-fx-text-fill: white; -fx-font-size: 11;"/>
        </HBox>
    </bottom>

</BorderPane>