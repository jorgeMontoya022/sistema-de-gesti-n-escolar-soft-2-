<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.proyectoingsoft2.controller.CuposController"
            style="-fx-background-color: #f0f0f0;">

    <!-- HEADER -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #3498db; -fx-padding: 20;" alignment="CENTER">
            <Label text="GESTIÓN DE CUPOS" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Colegio Montessori Quimbaya" style="-fx-font-size: 14; -fx-text-fill: white;"/>
        </VBox>
    </top>

    <!-- CONTENIDO PRINCIPAL -->
    <center>
        <HBox spacing="15" style="-fx-padding: 15;">

            <!-- PANEL IZQUIERDO: FORMULARIO -->
            <VBox spacing="10" style="-fx-border-color: #3498db; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: white; -fx-border-width: 2;" minWidth="300" maxWidth="320">
                <Label text="Nuevo Cupo" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Separator/>

                <Label text="Grado:" style="-fx-font-weight: bold;"/>
                <TextField fx:id="txtGrado" promptText="Ej: 1°, 2°..." style="-fx-padding: 8; -fx-border-color: #3498db; -fx-border-radius: 3; -fx-font-size: 11;"/>

                <Label text="Valor Matrícula ($):" style="-fx-font-weight: bold;"/>
                <TextField fx:id="txtValor" promptText="0.00" style="-fx-padding: 8; -fx-border-color: #3498db; -fx-border-radius: 3; -fx-font-size: 11;"/>

                <Label text="Estado:" style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="cbEstado" prefWidth="200" style="-fx-padding: 8; -fx-border-color: #3498db; -fx-border-radius: 3;"/>

                <Separator/>

                <HBox spacing="8" alignment="CENTER">
                    <Button fx:id="btnAgregar" text="+ AGREGAR" style="-fx-font-weight: bold; -fx-padding: 10 20; -fx-font-size: 11; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-border-radius: 3;"/>
                    <Button fx:id="btnLimpiar" text="LIMPIAR" style="-fx-font-weight: bold; -fx-padding: 10 20; -fx-font-size: 11; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-border-radius: 3;"/>
                </HBox>
            </VBox>

            <!-- PANEL DERECHO: TABLA Y ACCIONES -->
            <VBox spacing="10" style="-fx-border-color: #27ae60; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: white; -fx-border-width: 2;" HBox.hgrow="ALWAYS">

                <Label text="Listado de Cupos" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <TableView fx:id="tablaCupos" style="-fx-font-size: 11;" VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <columns>
                        <TableColumn text="ID" prefWidth="50" fx:id="colId"/>
                        <TableColumn text="Grado" prefWidth="80" fx:id="colGrado"/>
                        <TableColumn text="Valor ($)" prefWidth="100" fx:id="colValor"/>
                        <TableColumn text="Estado" prefWidth="120" fx:id="colEstado"/>
                    </columns>
                </TableView>

                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="btnEditar" text="✏️ EDITAR" style="-fx-font-weight: bold; -fx-padding: 8 15; -fx-font-size: 10; -fx-background-color: #f39c12; -fx-text-fill: white;"/>
                    <Button fx:id="btnEliminar" text="🗑️ ELIMINAR" style="-fx-font-weight: bold; -fx-padding: 8 15; -fx-font-size: 10; -fx-background-color: #e74c3c; -fx-text-fill: white;"/>
                </HBox>

                <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-border-radius: 3;">
                    <Label fx:id="lblTotal" text="Total Cupos: 0" style="-fx-font-weight: bold; -fx-font-size: 12;"/>
                </HBox>

            </VBox>

        </HBox>
    </center>

    <!-- FOOTER -->
    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Button fx:id="btnVolver" text="← VOLVER AL MENÚ" style="-fx-font-weight: bold; -fx-padding: 10 20; -fx-font-size: 12; -fx-background-color: #34495e; -fx-text-fill: white;"/>
        </HBox>
    </bottom>

</BorderPane>