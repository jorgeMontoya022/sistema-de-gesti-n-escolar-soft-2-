<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.proyectoingsoft2.controller.PagosController"
            style="-fx-background-color: #f0f0f0;">

    <top>
        <VBox spacing="10" style="-fx-background-color: #f39c12; -fx-padding: 20;" alignment="CENTER">
            <Label text="GESTIÓN DE PAGOS" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Colegio Montessori Quimbaya" style="-fx-font-size: 14; -fx-text-fill: white;"/>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;">
            <HBox spacing="15" style="-fx-padding: 15;">

                <VBox spacing="10" style="-fx-border-color: #f39c12; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: white; -fx-border-width: 2;" minWidth="320" maxWidth="320">
                    <Label text="Nuevo Pago" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Separator/>

                    <Label text="Matrícula:" style="-fx-font-weight: bold;"/>
                    <ComboBox fx:id="cbMatricula" prefWidth="200" style="-fx-padding: 8; -fx-border-color: #f39c12; -fx-border-radius: 3;"/>

                    <Label text="Monto ($):" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtMonto" promptText="0.00" style="-fx-padding: 8; -fx-border-color: #f39c12; -fx-border-radius: 3; -fx-font-size: 11;"/>

                    <Label text="Método de Pago:" style="-fx-font-weight: bold;"/>
                    <ComboBox fx:id="cbMetodoPago" prefWidth="200" style="-fx-padding: 8; -fx-border-color: #f39c12; -fx-border-radius: 3;"/>

                    <Label text="No. Transacción:" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtNumeroTransaccion" promptText="Opcional" style="-fx-padding: 8; -fx-border-color: #f39c12; -fx-border-radius: 3; -fx-font-size: 11;"/>

                    <Label text="Descripción:" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtDescripcion" promptText="Detalles del pago" style="-fx-padding: 8; -fx-border-color: #f39c12; -fx-border-radius: 3; -fx-font-size: 11;"/>

                    <Separator/>

                    <HBox spacing="8" alignment="CENTER">
                        <Button fx:id="btnAgregar" text="+ CREAR" style="-fx-font-weight: bold; -fx-padding: 10 20; -fx-font-size: 11; -fx-background-color: #f39c12; -fx-text-fill: white; -fx-border-radius: 3;"/>
                        <Button fx:id="btnLimpiar" text="LIMPIAR" style="-fx-font-weight: bold; -fx-padding: 10 20; -fx-font-size: 11; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-border-radius: 3;"/>
                    </HBox>

                    <Separator/>
                    <Label text="Acciones:" style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                    <Button fx:id="btnCompletar" text="✓ COMPLETAR" style="-fx-font-weight: bold; -fx-padding: 8 15; -fx-font-size: 10; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-max-width: 300;"/>
                    <Button fx:id="btnRechazar" text="✗ RECHAZAR" style="-fx-font-weight: bold; -fx-padding: 8 15; -fx-font-size: 10; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-max-width: 300;"/>
                    <Button fx:id="btnReembolsar" text="💰 REEMBOLSAR" style="-fx-font-weight: bold; -fx-padding: 8 15; -fx-font-size: 10; -fx-background-color: #3498db; -fx-text-fill: white; -fx-max-width: 300;"/>
                </VBox>

                <VBox spacing="10" style="-fx-border-color: #f39c12; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: white; -fx-border-width: 2;" HBox.hgrow="ALWAYS" minWidth="400">

                    <Label text="Listado de Pagos" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                    <TableView fx:id="tablaPagos" style="-fx-font-size: 10;" prefHeight="300" VBox.vgrow="ALWAYS">
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                        <columns>
                            <TableColumn text="ID" prefWidth="50" fx:id="colId"/>
                            <TableColumn text="Matrícula" prefWidth="80" fx:id="colMatricula"/>
                            <TableColumn text="Monto ($)" prefWidth="100" fx:id="colMonto"/>
                            <TableColumn text="Método" prefWidth="100" fx:id="colMetodo"/>
                            <TableColumn text="Estado" prefWidth="100" fx:id="colEstado"/>
                            <TableColumn text="Fecha" prefWidth="100" fx:id="colFecha"/>
                        </columns>
                    </TableView>

                    <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-border-radius: 3;">
                        <Label fx:id="lblTotal" text="Total Pagos: 0" style="-fx-font-weight: bold; -fx-font-size: 11;"/>
                        <Label fx:id="lblTotalPagos" text="Completados: $0" style="-fx-font-weight: bold; -fx-font-size: 11; -fx-text-fill: #27ae60;"/>
                        <Label fx:id="lblPagosPendientes" text="Pendientes: $0" style="-fx-font-weight: bold; -fx-font-size: 11; -fx-text-fill: #e74c3c;"/>
                    </HBox>

                </VBox>

            </HBox>
        </ScrollPane>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Button fx:id="btnVolver" text="← VOLVER AL MENÚ" style="-fx-font-weight: bold; -fx-padding: 10 20; -fx-font-size: 12; -fx-background-color: #34495e; -fx-text-fill: white;"/>
        </HBox>
    </bottom>

</BorderPane>