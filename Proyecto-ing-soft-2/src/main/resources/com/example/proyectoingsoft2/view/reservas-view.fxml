<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.proyectoingsoft2.controller.ReservaController"
            style="-fx-background-color: #f0f0f0;">

    <top>
        <VBox spacing="10" style="-fx-background-color: #8e44ad; -fx-padding: 20;" alignment="CENTER">
            <Label text="GESTIÓN DE RESERVAS DE CUPOS" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Colegio Montessori Quimbaya" style="-fx-font-size: 14; -fx-text-fill: white;"/>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" vbarPolicy="ALWAYS" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;">
            <HBox spacing="15" style="-fx-padding: 15;">

                <VBox spacing="10" style="-fx-border-color: #8e44ad; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: white; -fx-border-width: 2;" minWidth="340" maxWidth="340">
                    <Label text="Nueva Reserva de Cupo" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Separator/>

                    <Label text="Estudiante:" style="-fx-font-weight: bold;"/>
                    <ComboBox fx:id="cbEstudiante" prefWidth="220" style="-fx-padding: 8; -fx-border-color: #8e44ad; -fx-border-radius: 3;"/>

                    <Label text="Grado Solicitado:" style="-fx-font-weight: bold;"/>
                    <ComboBox fx:id="cbGrado" prefWidth="220" style="-fx-padding: 8; -fx-border-color: #8e44ad; -fx-border-radius: 3;"/>

                    <Label text="Jornada Preferida:" style="-fx-font-weight: bold;"/>
                    <ComboBox fx:id="cbJornada" prefWidth="220" style="-fx-padding: 8; -fx-border-color: #8e44ad; -fx-border-radius: 3;"/>

                    <Label fx:id="lblDisponibilidadCupo" text="" style="-fx-font-size: 11; -fx-padding: 8; -fx-background-color: #ecf0f1; -fx-border-radius: 3;" wrapText="true" minHeight="50"/>

                    <Label text="Observaciones:" style="-fx-font-weight: bold;"/>
                    <TextArea fx:id="txtObservaciones" promptText="Notas adicionales (opcional)" wrapText="true" prefRowCount="3" style="-fx-border-color: #8e44ad; -fx-border-radius: 3;"/>

                    <Separator/>

                    <Label text="ℹ️ INFORMACIÓN IMPORTANTE" style="-fx-font-size: 11; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                    <Label text="• La reserva es válida por 15 días
• Debe completar la matrícula antes de la expiración
• Solo puede tener una reserva activa por estudiante
• Recibirá un comprobante digital"
                           style="-fx-font-size: 10; -fx-text-fill: #7f8c8d;" wrapText="true"/>

                    <Separator/>

                    <HBox spacing="8" alignment="CENTER">
                        <Button fx:id="btnReservar" text="📋 RESERVAR" style="-fx-font-weight: bold; -fx-padding: 10 20; -fx-font-size: 11; -fx-background-color: #8e44ad; -fx-text-fill: white; -fx-border-radius: 3;"/>
                        <Button fx:id="btnLimpiar" text="LIMPIAR" style="-fx-font-weight: bold; -fx-padding: 10 20; -fx-font-size: 11; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-border-radius: 3;"/>
                    </HBox>

                    <Separator/>
                    <Label text="Acciones:" style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                    <Button fx:id="btnConfirmar" text="✓ CONFIRMAR" style="-fx-font-weight: bold; -fx-padding: 8 15; -fx-font-size: 10; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-max-width: 320;"/>
                    <Button fx:id="btnCancelar" text="✗ CANCELAR" style="-fx-font-weight: bold; -fx-padding: 8 15; -fx-font-size: 10; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-max-width: 320;"/>
                    <Button fx:id="btnImprimir" text="🖨️ IMPRIMIR COMPROBANTE" style="-fx-font-weight: bold; -fx-padding: 8 15; -fx-font-size: 10; -fx-background-color: #3498db; -fx-text-fill: white; -fx-max-width: 320;"/>
                </VBox>

                <VBox spacing="10" style="-fx-border-color: #8e44ad; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: white; -fx-border-width: 2;" HBox.hgrow="ALWAYS">

                    <Label text="Listado de Reservas" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                    <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: #ecf0f1; -fx-padding: 8; -fx-border-radius: 3;">
                        <Label text="🟢 Activa" style="-fx-font-size: 10; -fx-text-fill: #2c3e50;"/>
                        <Label text="🟡 Por expirar (≤3 días)" style="-fx-font-size: 10; -fx-background-color: #fff3cd; -fx-padding: 3 6; -fx-text-fill: #856404;"/>
                        <Label text="🔴 Expirada" style="-fx-font-size: 10; -fx-background-color: #ffcccc; -fx-padding: 3 6; -fx-text-fill: #721c24;"/>
                        <Label text="🟢 Confirmada" style="-fx-font-size: 10; -fx-background-color: #d4edda; -fx-padding: 3 6; -fx-text-fill: #155724;"/>
                    </HBox>

                    <TableView fx:id="tablaReservas" style="-fx-font-size: 10;" VBox.vgrow="ALWAYS">
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                        <columns>
                            <TableColumn text="ID" prefWidth="50" fx:id="colId"/>
                            <TableColumn text="Número Reserva" prefWidth="130" fx:id="colNumero"/>
                            <TableColumn text="Estudiante" prefWidth="140" fx:id="colEstudiante"/>
                            <TableColumn text="Cupo" prefWidth="130" fx:id="colCupo"/>
                            <TableColumn text="Estado" prefWidth="90" fx:id="colEstado"/>
                            <TableColumn text="Fecha Reserva" prefWidth="100" fx:id="colFechaReserva"/>
                            <TableColumn text="Días Rest." prefWidth="70" fx:id="colDiasRestantes"/>
                        </columns>
                    </TableView>

                    <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-border-radius: 3;">
                        <Label fx:id="lblTotal" text="Total Reservas: 0" style="-fx-font-weight: bold; -fx-font-size: 12;"/>
                        <Label fx:id="lblActivas" text="Activas: 0" style="-fx-font-weight: bold; -fx-font-size: 11; -fx-text-fill: #8e44ad;"/>
                    </HBox>

                </VBox>

            </HBox>
        </ScrollPane>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Button fx:id="btnVolver" text="← VOLVER AL MENÚ" style="-fx-font-weight: bold; -fx-padding: 10 20; -fx-font-size: 12; -fx-background-color: #34495e; -fx-text-fill: white;"/>
        </HBox>
    </bottom>

</BorderPane>